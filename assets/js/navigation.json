---
layout: null
---
{
  "categories": [
    {% assign categories = site.categories | sort %}
    {% for category in categories %}
    {
      "name": "{{ category[0] }}",
      "slug": "{{ category[0] | slugify }}",
      "count": {{ category[1] | size }},
      "url": "{{ site.baseurl }}/category/{{ category[0] | slugify }}/"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ],
  "posts": [
    {% assign posts = site.posts | where_exp:"post","post.is_generated != true" %}
    {% for post in posts %}
    {
      "title": {{ post.title | jsonify }},
      "slug": "{{ post.title | slugify }}",
      "category": "{{ post.category | default: 'posts' }}",
      "url": "{{ post.url | prepend: site.baseurl }}",
      "date": "{{ post.date | date: '%Y-%m-%d' }}",
      "description": {{ post.description | default: "" | truncate: 100 | jsonify }}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
